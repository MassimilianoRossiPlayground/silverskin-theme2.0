#shopify-section-article-template{

    margin-top:40px;
}

.pre-header{

    position: relative;
    text-align: center;
    margin-top:60px;


    .breadcrumb-container{
        position: absolute;
        left: 20px;
        top:0px;


        .breadcrumb{
            margin: 0;
        }

    }
    .tag-container{
        font-weight: bold;
        @media screen and (max-width: 768px) {
            padding-top: 40px;
        }
    }
}

.blog-header{
    text-align: center;
    width: 60%;
    margin: 0 auto;
    
    .blog-subtitle{

        margin: 30px 0;
    }

    .article__date{
        margin-top: 20px;
        margin-bottom:20px;
    }
    @media screen and (max-width: 768px) {
        h2{
            font-size: 30px;
        }
    }
}

.image_blog_alt{
    text-align: center;
    width: 60%;
    margin: 0 auto;
    margin-top: 20px;
}


.blog-content{
    text-align: justify;


    h2{
        text-align: center;
    }
   
}

.more-articles {
    margin-bottom: 40px;

    h2 {
        text-align: center;
        margin-bottom:40px;
        text-transform: capitalize!important;
    }
    .article-title{
        font-size: 20px;
        margin-top:10px;
    }
}