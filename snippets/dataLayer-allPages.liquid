                                                        //dataLayer.push(removeFromCart);
                                                        //if (__DL__.debug) {
                                                        //    console.log("Cart"+" :"+JSON.stringify(removeFromCart, null, " "));
                                                        //}
                                                    });
                                                });
                                            }
                                        }, 500);
                                    }       
                                }
                                
                                $(document).on('click', __DL__.cartTriggers, function() {
                                    __DL__addtocart();
                                });
                                
                                    
                }); // document ready
            }
        }, 500);
</script>