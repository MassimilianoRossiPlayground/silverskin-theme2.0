                                                        console.log("Add to Cart"+" :"+JSON.stringify(product, null, " "));
                                                    }
                                                }
                                            }
                                        });
                                    },1000);
                                    
                                {% else %}
                                    
                                    dataLayer.push(product, {
                                        'pageType' : 'Add to Cart',
                                        'event'    : 'Add to Cart'
                                    });
                                    
                                    if (__DL__.debug) {
                                        console.log("Add to Cart"+" :"+JSON.stringify(product, null, " "));
                                    }
                                    
