<div class="section-masonry-gallery">

    <div class="masonry-gallery" style="height: {{section.settings.gallery_height}}px;">
        {% for block in section.blocks %}

            {% if block.settings.direction_from == "left" %}
                {% assign direction_from = "left" %}
              {% else %}
                {% assign direction_from = "right" %}
              {% endif %}

              
            <img style="position: absolute; top: {{ block.settings.cord_y}}px;{{direction_from}}: {{ block.settings.cord_x}}%;" src="{{ block.settings.image | img_url: 'master' }}" alt="silverskin">
        {% endfor %}
    </div>

</div>

{% schema %}
  {
    "name": "Masonry Gallery",
    "max_blocks": 99,
    "settings": [
        {
            "type": "number",
            "id": "gallery_height",
            "label": "Gallery Height in px"
        }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "select",
                "id": "direction_from",
                "label": "Direction from",
                "options": [
                    {
                    "value": "left",
                    "label": "Left"
                    },
                    {
                    "value": "right",
                    "label": "Right"
                    }
                ],
                "default": "left"
              },
            {
                "type": "number",
                "id": "cord_x",
                "label": "Coordinata  in % da 0 a 100"
            },
            {
                "type": "number",
                "id": "cord_y",
                "label": "Coordinata Y in px"
            }
        ]
      }
    ],
    "presets": [
        {
            "name": "Masonry Gallery",
            "blocks": [
                {
                "type": "image"
                }
            ]
        }
    ]
  }
{% endschema %}


{% style %}
.masonry-gallery {
    position: relative;
    width: 100%;
    background: #d9d9d9;
}


{% endstyle %}


