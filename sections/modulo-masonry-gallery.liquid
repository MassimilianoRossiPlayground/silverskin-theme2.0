<div class="section-masonry-gallery">

    <div class="masonry-gallery" style="height: {{section.settings.gallery_height}}px;">
        {% for block in section.blocks %}

            {% if block.settings.direction_from == "left" %}
                {% assign direction_from = "left" %}
                {% assign transform_direction = "top left" %}
              {% else %}
                {% assign direction_from = "right" %}
                {% assign transform_direction = "top right" %}
              {% endif %}

            <img style="position: absolute; top: {{ block.settings.cord_y}}px;{{direction_from}}: {{ block.settings.cord_x}}%;transform-origin: {{transform_direction}};" src="{{ block.settings.image | img_url: 'master' }}" alt="silverskin">
        {% endfor %}
    </div>

</div>

{% schema %}
  {
    "name": "Masonry Gallery",
    "max_blocks": 99,
    "settings": [
        {
            "type": "number",
            "id": "gallery_height",
            "label": "Gallery Height in px"
        }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "select",
                "id": "direction_from",
                "label": "Direction from",
                "options": [
                    {
                    "value": "left",
                    "label": "Left"
                    },
                    {
                    "value": "right",
                    "label": "Right"
                    }
                ],
                "default": "left"
              },
            {
                "type": "number",
                "id": "cord_x",
                "label": "Coordinata  in % da 0 a 100"
            },
            {
                "type": "number",
                "id": "cord_y",
                "label": "Coordinata Y in px"
            }
        ]
      }
    ],
    "presets": [
        {
            "name": "Masonry Gallery",
            "blocks": [
                {
                "type": "image"
                }
            ]
        }
    ]
  }
{% endschema %}


{% style %}
.masonry-gallery {
    position: relative;
    width: 100%;
    background: #d9d9d9;
}

@media screen and (max-width: 1440px) {
    .masonry-gallery img {
        transform: scale(0.8);
    }
}
@media screen and (max-width: 991px) {
    .masonry-gallery img {
        transform: scale(0.6);
    }
}
@media screen and (max-width: 768px) {
    .masonry-gallery {
        display: flex;
        overflow-x: scroll;
        height: 400px !important;
        overflow-y: hidden;
    }
    .masonry-gallery img {
        position: relative !important;
        transform: none;
        width: 100%;
        height: 100%;
        top: unset !important;
        left: unset !important;
        right: unset !important;
    }
    .masonry-gallery::-webkit-scrollbar {
        height: 4px;
        width: 4px;
        background: gray;
    }
    .masonry-gallery::-webkit-scrollbar-thumb:horizontal {
        background: #000;
        border-radius: 10px;
    }
}

{% endstyle %}


