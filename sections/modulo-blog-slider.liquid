<div class="slider-blog-slider">
    <div class="page-width">
        <div class="slider-blog-slider__head">
            <div class="slider-blog-slider__head__texts">
                <h5>{{ section.settings.sup_title }}</h5>
                <h3>{{ section.settings.title }}</h3>
            </div>
            <a class="slider-blog-slider__head__cta" href="{{ section.settings.cta_link }}">{{ section.settings.title }}</a>
        </div>
        <div class="swiper-container swiper-blog-slider">
            <div class="swiper-wrapper">
                {% for slide in section.blocks %}
                    {% assign blog_handle = slide.settings.article.handle | split: "/" | first %}
                    <div class="swiper-slide">
                        <div class="blog-slider-card">
                            <img src="{{ slide.settings.article.image | img_url: 'master' }}" alt="{{ slide.settings.article.title | strip_html }}">
                            <div class="blog-slider-card__content">
                                <span class="blog-slider-card__content__sup">{{ blogs[blog_handle].title }}</span>
                                <span class="blog-slider-card__content__title">{{ slide.settings.article.title }}</span>
                                <a class="blog-slider-card__cta" href="{{ slide.settings.article.url }}">READ THE STORY</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-scrollbar"></div>
        </div>
    </div>
    <div class="line-scrollbar"></div>
</div>



{% schema %}
  {
    "name": "Slider Blog Slider",
    "max_blocks": 99,
    "settings": [
        {
            "type": "text",
            "id": "sup_title",
            "label": "Sup Title"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "url",
            "id": "cta_link",
            "label": "CTA Link"
        },
        {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
        }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
            {
                "type": "article",
                "id": "article",
                "label": "Article"
            }
        ]
      }
    ],
    "presets": [
        {
            "name": "Slider Blog Slider",
            "blocks": [
                {
                "type": "slide"
                }
            ]
        }
    ]
  }
{% endschema %}


{% style %}

.slider-blog-slider {
    margin: 120px 0;
    overflow: hidden;
}
.slider-blog-slider .swiper-slide {
    width: max-content;
}
.swiper-blog-slider img {
    max-height: 70vh;
}
.swiper-blog-slider {
    overflow: visible;
}
.slider-blog-slider .swiper-scrollbar {
  margin: 60px 0 0 0;
  background: transparent;
  border-top: unset;
}
.slider-blog-slider .swiper-scrollbar .swiper-scrollbar-drag {
    height: 3px;
}
.slider-blog-slider .line-scrollbar {
    width: 100%;
    height: 1px;
    background: #757382;
    margin-top: -4px;
}
.slider-blog-slider__head__texts h3 {
    font-size: 48px;
    font-family: 'barlow-semibold-italic' !important;
}
.slider-blog-slider__head {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 60px;
}
.slider-blog-slider__head__cta {
    padding: 10px 20px;
    border: 1px solid #404040;
    font-size: 14px;
    font-family: 'barlow-semibold';
}
.blog-slider-card__content__sup {
    grid-area: sup_title;
    font-family: 'barlow-light';
}
.blog-slider-card__content__title {
    grid-area: title;
    font-family: 'barlow-semibold';
}
.blog-slider-card__cta {
    grid-area: link;
    text-align: right;
    text-decoration: underline;
    font-family: 'barlow-semibold';
}
.blog-slider-card__content {
    display: grid;
    grid-template-rows: auto;
    grid-template-columns: 50% 50%;
    grid-template-areas: 
    "sup_title ."
    "title link";
    text-transform: uppercase;
    padding: 10px 3px;
}
.blog-slider-card img {
    aspect-ratio: 1 / 1;
    display: block;
    width: 100%;
    object-fit: cover;
    max-height: 50vh;
}
{% endstyle %}


{% javascript %}

(function(document) {

    let selectors = {
        swiperBigimages: '.swiper-blog-slider',
    };
  
    let swiperBigimages = document.querySelector(selectors.swiperBigimages)

    window.addEventListener('load', function() {

        let swiper_images = new Swiper(swiperBigimages, {
            slidesPerView: "auto",
            spaceBetween: 30,
            freeMode: true,
            scrollbar: {
                el: ".slider-blog-slider .swiper-scrollbar",
                hide: false,
            },
        });

    })

    


})(document);
  

{% endjavascript %}