<div class="athletes-page">

  <div class="athletes-page__head">
    <div class="athletes-page__head__left">
      <h5>{{ section.settings.sup_title }}</h5>
      <h1>{{ section.settings.sup_title }}</h1>
    </div>
    <div class="athletes-page__head__right">
      <span>{{ section.settings.right_text }}</span>
      <a>Scroll to discover</a>
    </div>
  </div>
  
  <div class="athletes-page__list">
    <div class="athletes-page__list__filters">
      
      <span data-filter="all">All
        <sup attr-filter-count></sup>
      </span>
      
      <span data-filter="trail">Trail
        <sup attr-filter-count></sup>
      </span>
      
      <span data-filter="bike">Bike
        <sup attr-filter-count></sup>
      </span>
      
      <span data-filter="snowsport">Snowsport
        <sup attr-filter-count></sup>
      </span>
      
      <span data-filter="running">Running
        <sup attr-filter-count></sup>
      </span>
      
      <span data-filter="mountaineering">Mountaineering
        <sup attr-filter-count></sup>
      </span>
      
      <span data-filter="other">Other
        <sup attr-filter-count></sup>
      </span>

    </div>
    <div class="athletes-page__list__cards">

      {% for block in section.blocks %}
        <div class="athlete-card">
          <div class="athlete-card__media">
            <img>
            <video>
          </div>
          <div class="athlete-card__content">
            <div class="athlete-card__content__top">
              <span>NAME</span>
              <span>{{ block.settings.name }}</span>
            </div>
            <div class="athlete-card__content__bottom">
              <a href="{{ block.settings.link }}">MORE</a>
              <div class="athlete-card__content__bottom__tag-list">
                
                {% if block.settings.tag_trail %}
                  <span>Trail</span>
                {% endif %}
                {% if block.settings.tag_bike %}
                  <span>Bike</span>
                {% endif %}
                {% if block.settings.tag_snowsport %}
                  <span>Snowsport</span>
                {% endif %}
                {% if block.settings.tag_running %}
                  <span>Running</span>
                {% endif %}
                {% if block.settings.tag_mountaineering %}
                  <span>Mountaineering</span>
                {% endif %}
                {% if block.settings.tag_other %}
                  <span>Other</span>
                {% endif %}
                
              </div>
            </div>
          </div>
        </div>
      {% endfor %}

    </div>
  </div>

  <div class="athletes-page__projects">

      <div class="athletes-page__projects__head">
        <h5>{{ section.setting.sup_title_project }}</h5>
        <h2>{{ section.setting.title_project }}</h2>
      </div>

      <div class="athletes-page__projects__content">

      </div>

  </div>

  <div class="athletes-page__favourites">

    <div class="athletes-page__favourites__head">
      <h5>{{ section.setting.title_favourites }}</h5>
      <a href="#">view all</a>
    </div>

    <div class="athletes-page__favourites__content">

    </div>

  </div>

</div>

{% schema %}
  {
    "name": "Athletes Page",
    "settings": [
      {
        "type": "text",
        "id": "sup_title",
        "label": "Sup Title"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "right_text",
        "label": "Right text"
      },
      {
        "type": "text",
        "id": "sup_title_project",
        "label": "Sup title Project"
      },
      {
        "type": "text",
        "id": "title_project",
        "label": "title Project"
      },
      {
        "type": "text",
        "id": "title_favourites",
        "label": "title Favourites"
      }
    ],
    "blocks": [
      {
        "type": "card_athlete",
        "name": "Card Athlete",
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "video",
            "id": "video",
            "label": "Video"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "checkbox",
            "id": "tag_trail",
            "label": "Trail"
          },
          {
            "type": "checkbox",
            "id": "tag_bike",
            "label": "Bike"
          },
          {
            "type": "checkbox",
            "id": "tag_snowsport",
            "label": "Snowsport"
          },
          {
            "type": "checkbox",
            "id": "tag_running",
            "label": "Running"
          },
          {
            "type": "checkbox",
            "id": "tag_mountaineering",
            "label": "Mountaineering"
          },
          {
            "type": "checkbox",
            "id": "tag_other",
            "label": "Other"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Athletes Page"
      }
    ]
  }
{% endschema %}
