<div class="athlete-page">

  <div class="athlete-page__head">

    <div class="athlete-page__head__back">
      <img src="{{ section.settings.image | img_url: "master" }}" alt="{{ block.settings.firstname | strip_html }}">
    </div>

    <div class="athlete-page__head__left">
      <div class="athlete-page__head__left__content">
        <div class="athlete-breadcrumbs"><a href="/pages/athletes">{% include 'icon-exagon-arrow' %} <span>ALL ATHLETES</span></a></div>
        <h1><strong>{{ section.settings.firstname }}</strong><br/> {{ section.settings.lastname }}</h1>
        <div class="athlete-table">
          <div class="athlete-row">
            <div class="athlete-table__title">CLASS</div>
            <div class="athlete-table__value">{{ section.settings.year }}</div>
          </div>
          <div class="athlete-row">
            <div class="athlete-table__title">ACTIVITY</div>
            <div class="athlete-table__value">
                  {% if section.settings.tag_trail %}
                    <span>Trail</span>
                  {% endif %}
                  {% if section.settings.tag_bike %}
                    <span>Bike</span>
                  {% endif %}
                  {% if section.settings.tag_snowsport %}
                    <span>Snowsport</span>
                  {% endif %}
                  {% if section.settings.tag_running %}
                    <span>Running</span>
                  {% endif %}
                  {% if section.settings.tag_mountaineering %}
                    <span>Mountaineering</span>
                  {% endif %}
                  {% if section.settings.tag_other %}
                    <span>Other</span>
                  {% endif %}
            </div>
          </div>
          {% if section.settings.other_infos != blank %}
            <div class="athlete-row">
              <div class="athlete-table__title">OTHER INFOS</div>
              <div class="athlete-table__value">{{ section.settings.other_infos }}</div>
            </div>
        {% endif %}
        </div>
      </div>
    </div>
    
  </div>
  

  <div class="athlete-page__text-images">

    <div class="athlete-page__text-images__paragraph">
      <div class="athlete-page__text-images__paragraph__content">
        {{ section.settings.paragraph_top }}
      </div>
      
      <div class="athlete-page__text-images__image-text">
        <img src="{{ section.settings.image_1 | img_url: "master" }}" alt="athlete silverskin">
        <div class="athlete-page__text-images__image-text__paragraph">
          {{ section.settings.paragraph_right }}
        </div>
      </div>
    </div>

    <div class="athlete-page__text-images__images">
      <img class="ath-image-left" src="{{ section.settings.image_2 | img_url: "master" }}" alt="athlete silverskin">
      <img class="ath-image-right"src="{{ section.settings.image_3 | img_url: "master" }}" alt="athlete silverskin">
    </div>

    <div class="athlete-page__text-images__paragraph-bottom">
      <p>{{ section.settings.paragraph_two_columns_1 }}</p>
      <p>{{ section.settings.paragraph_two_columns_2 }}</p>
    </div>

  </div>

  <div class="athlete-page__banner" style="background-image:url({{ section.settings.image_banner | img_url: "master" }})">
    <div class="athlete-page__banner__content-top">
      <h3>{{ section.settings.banner_top }}</h3>
    </div>
    <div class="athlete-page__banner__content-bottom">
      <h6>{{ section.settings.banner_bottom }}</h6>
    </div>
  </div>

</div>

{% assign athlete_history = page.metafields.custom.athlete_history.value %}
<div class="slider-horizontal">
  <div class="page-width">
      <div class="slider-horizontal__years">
          <div class="swiper-container swiper-horizontal">
              <div class="swiper-wrapper">
                  {% assign year_list = athlete_history.year_list | split: "|" %}
                  {% for year in year_list %}
                      <div class="swiper-slide">
                          <div class="line-horizontal"></div>
                          <span class="big-year">{{ year }}</span>
                          <div class="slider-horizontal__slides">
                              {% for slide in athlete_history.event %}
                                  {% if slide.ref_year == year %}
                                      {%- liquid 
                                          if slide.vertical_alignment == "top" 
                                              assign vertical_alignment = "22%"
                                          else 
                                              assign vertical_alignment = "63%"
                                          endif
                                      -%}
                                      <span class="horizontal-card__dot" data-dot--year="{{ year }}" data-dot--num="{{ forloop.index }}" style="left:{{ slide.horizontal_position }}%;"></span>
                                      <div class="horizontal-card" style="left:{{ slide.horizontal_position }}%;top:{{ vertical_alignment }};">
                                          <div class="horizontal-card__content">
                                              <h5>{{ slide.title }}</h5>
                                              <h6>{{ slide.sub_title }}</h6>
                                              <span>{{ slide.date }}</span>
                                          </div>
                                      </div>
                                  {% endif %}
                              {% endfor %}
                          </div>
                      </div>
                  {% endfor %}
              </div>
          </div>
      </div>
  </div>
</div>



{% assign athlete_gallery = page.metafields.custom.athlete_gallery.value %}
<div class="slider-big-images">
  <div class="page-width">
    <div class="slider-big-images__content">
      <div class="swiper-container swiper-big-images">
        <div class="swiper-wrapper">
          {% for athlete_image in athlete_gallery %}
            <div class="swiper-slide">
                <img src="{{ athlete_image.image | img_url: 'master' }}" alt="silverskin">
            </div>
          {% endfor %}
        </div>
        <div class="swiper-scrollbar"></div>
      </div>
    </div>
  </div>
  <div class="line-scrollbar"></div>
</div>


{% assign athlete_products = page.metafields.custom.athlete_products.value %}
<div class="slider-favourites">

  <div class="slider-favourites__head">
    <h5>{{ section.settings.firstname }}'S FAVOURITES</h5>
  </div>

  <div class="page-width">

    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for athlete_product in athlete_products %}
          <div class="swiper-slide">
            <div class="favourite-card">
              <img src="{{ athlete_product.featured_media | img_url: 'master' }}" alt="{{ athlete_product.title | strip_html }}">
              <div class="favourite-card__content">
                <div class="favourite-card__content__left">
                  <h6>Stay Fresh</h6>
                  </h5>{{ athlete_product.title }}</h5>
                </div>
                <div class="favourite-card__content__right">
                  <span class="favourite-card-price">{{ athlete_product.price | money }}</span>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="swiper-scrollbar"></div>
  </div>
  <div class="line-scrollbar"></div>

</div>


