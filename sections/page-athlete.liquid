<script>
  var headerWrapper = document.querySelector(".header-wrapper");
  headerWrapper.classList.add("is-light");
</script>

<div class="athlete-page">

  <div class="athlete-page__head">

    <div class="athlete-page__head__left">
      <div class="athlete-page__head__left__content">
        <div class="athlete-breadcrumbs"><a href="/pages/athletes">{% include 'icon-exagon-arrow' %} <span>ALL ATHLETES</span></a></div>
        <h1><strong>{{ section.settings.firstname }}</strong><br/> {{ section.settings.lastname }}</h1>
        <div class="athlete-table">
          <div class="athlete-row">
            <div class="athlete-table__title">CLASS</div>
            <div class="athlete-table__value">{{ section.settings.year }}</div>
          </div>
          <div class="athlete-row">
            <div class="athlete-table__title">ACTIVITY</div>
            <div class="athlete-table__value">
                  {% if section.settings.tag_trail %}
                    <span>Trail</span>
                  {% endif %}
                  {% if section.settings.tag_bike %}
                    <span>Bike</span>
                  {% endif %}
                  {% if section.settings.tag_snowsport %}
                    <span>Snowsport</span>
                  {% endif %}
                  {% if section.settings.tag_running %}
                    <span>Running</span>
                  {% endif %}
                  {% if section.settings.tag_mountaineering %}
                    <span>Mountaineering</span>
                  {% endif %}
                  {% if section.settings.tag_other %}
                    <span>Other</span>
                  {% endif %}
            </div>
          </div>
          <div class="athlete-row">
            <div class="athlete-table__title">LOREM IPSUM</div>
            <div class="athlete-table__value">{{ section.settings.other_infos }}</div>
          </div>
        </div>
      </div>
    </div>
    <div class="athlete-page__head__right">
      <img src="{{ section.settings.image | img_url: "master" }}" alt="{{ block.settings.firstname | strip_html }}">
    </div>
    
  </div>
  
    
</div>

{% schema %}
  {
    "name": "Athlete Page",
    "settings": [
      {
        "type": "text",
        "id": "firstname",
        "label": "First Name"
      },
      {
        "type": "text",
        "id": "lastname",
        "label": "Last Name"
      },
      {
        "type": "text",
        "id": "year",
        "label": "Year"
      },
      {
        "type": "checkbox",
        "id": "tag_trail",
        "label": "Trail"
      },
      {
        "type": "checkbox",
        "id": "tag_bike",
        "label": "Bike"
      },
      {
        "type": "checkbox",
        "id": "tag_snowsport",
        "label": "Snowsport"
      },
      {
        "type": "checkbox",
        "id": "tag_running",
        "label": "Running"
      },
      {
        "type": "checkbox",
        "id": "tag_mountaineering",
        "label": "Mountaineering"
      },
      {
        "type": "checkbox",
        "id": "tag_other",
        "label": "Other"
      },
      {
        "type": "html",
        "id": "other_infos",
        "label": "Other Infos"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Athlete Page"
      }
    ]
  }
{% endschema %}


{% style %}

html {
  scroll-behavior: smooth;
}
.athlete-page__head {
  color: #fff;
    padding: 200px 20px;
    background: #000;
    margin-top: -120px;
    display: grid;
    grid-template-columns: 50% 50%;
}
.athlete-page__head a {
  color: #fff;
  display: block;
}
.athlete-page__head .boxed {
  margin: 0 auto;
  max-width: 1400px;
  display: flex;
  flex-wrap: wrap;
}
.athlete-page__head h1 {
    font-family: "barlow-italic" !important;
    font-size: 48px;
    margin-bottom: 0;
    margin-bottom: 60px;
}
.athlete-page__head h1 strong {
    font-family: "barlow-bold-italic" !important;
}
.athlete-page__head h5 {
  font-family: "barlow" !important;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: .3em;
  margin-bottom: 50px;
}
.athlete-breadcrumbs {
  margin-bottom: 60px;
}
.athlete-breadcrumbs svg {
  width: 50px;
  height: 44px;
  margin-right: 15px;
}
.athlete-breadcrumbs a {
    display: flex;
    align-items: center;
}
.athlete-page__head__left {
    display: flex;
    justify-content: center;
}

.athlete-page__head__left__content {
    width: 100%;
    max-width: 400px;
}
.athlete-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 60px;
}
.athlete-table__title {
    opacity: 0.5;
}
.athlete-table__value {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-transform: uppercase;
}
.athlete-page__head__right {
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

{% endstyle %}

