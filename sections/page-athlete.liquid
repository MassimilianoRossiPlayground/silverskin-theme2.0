{% style %}

html {
  scroll-behavior: smooth;
}
.athlete-page__head {
  color: #fff;
  background: #000;
  margin-top: -120px;
  position: relative;
}
.athlete-page__head a {
  color: #fff;
  display: block;
}
.athlete-page__head .boxed {
  margin: 0 auto;
  max-width: 1400px;
  display: flex;
  flex-wrap: wrap;
}
.athlete-page__head h1 {
  font-family: "barlow-italic" !important;
  font-size: 48px;
  margin-bottom: 0;
  margin-bottom: 60px;
}
.athlete-page__head h1 strong {
  font-family: "barlow-bold-italic" !important;
}
.athlete-page__head h5 {
  font-family: "barlow" !important;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: .3em;
  margin-bottom: 50px;
}
.athlete-breadcrumbs {
  margin-bottom: 60px;
}
.athlete-breadcrumbs svg {
  width: 50px;
  height: 44px;
  margin-right: 15px;
}
.athlete-breadcrumbs a {
  display: flex;
  align-items: center;
}
.athlete-page__head__back img {
  width: 100%;
  height: auto;
  display: block;
}
.athlete-page__head__left {
  display: flex;
  position: absolute;
  top: 25%;
  left: 0;
  padding-left: 100px;
}

.athlete-page__head__left__content {
    width: 100%;
    max-width: 400px;
}
.athlete-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 60px;
}
.athlete-table__title {
    opacity: 0.5;
}
.athlete-table__value {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-transform: uppercase;
}

.athlete-page__text-images {
  color: #000;
  padding: 120px 0;
}
.athlete-page__text-images__paragraph {
  max-width: 1420px;
  font-size: 32px;
  margin: 0 auto 90px auto;
  padding: 0 20px;
}
.athlete-page__text-images__paragraph__content {
    max-width: 800px;
    margin-bottom: 80px;
    padding-left: 80px;
    font-size: 24px;
}
.athlete-page__text-images__image-text {
    display: grid;
    grid-template-columns: 50% 50%;
    margin-bottom: 80px;
}
.athlete-page__text-images__image-text img {
  padding-left: 80px;
}
.athlete-page__text-images__image-text__paragraph {
    align-self: center;
    max-width: 500px;
    padding: 0 20px;
    font-size: 16px;
}
.athlete-page__text-images__images {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 80px;
  }
.athlete-page__text-images__images img {
    /* max-height: 826px; */
    padding-left: 20px;
    width: 100%;
    max-width: 54vw;
}
.athlete-page__text-images__images img.ath-image-left {
  max-width: 38vw;
  padding-left: 3%;
}
.athlete-page__text-images__paragraph-bottom {
  display: grid;
  max-width: 920px;
  margin: 0 auto;
  grid-template-columns: 49% 49%;
  justify-content: space-between;
}
.athlete-page__banner {
    aspect-ratio: 1/1;
    background-repeat: no-repeat;
    background-size: cover;
    width: 100%;
    position: relative;
}
.athlete-page__banner__content-top {
  position: absolute;
  top: 10%;
  left: 50%;
  max-width: 900px;
  font-size: 56px;
  transform: translateX(-80%);
  color: #fff;
}
.athlete-page__banner__content-top h3 {
  font-family: 'barlow-semibold-italic' !important;
  text-transform: none;
  font-size: 36px;
}
.athlete-page__banner__content-bottom {
    position: absolute;
    bottom: 10%;
    right: 10%;
    font-size: 16px;
    max-width: 320px;
    text-align: right;
}
.athlete-page__banner__content-bottom h6 {
  font-family: 'barlow-bold' !important;
    text-transform: none;
    line-height: 24px;
    letter-spacing: normal;
    font-size: 16px;
}

.slider-big-images {
    margin: 120px auto;
    overflow: hidden;
    padding-bottom: 5px;
}
.slider-big-images__content {
    margin: 0 auto;
    max-width: 1420px;
}
.swiper-big-images {
    overflow: visible;
}
.slider-big-images .swiper-slide {
    width: max-content;
}
.swiper-big-images img {
    max-height: 70vh;
}
.slider-big-images .swiper-scrollbar {
  margin: 60px 0 0 0;
  background: transparent;
  border-top: unset;
}
.slider-big-images .swiper-scrollbar .swiper-scrollbar-drag {
    height: 3px;
}
.slider-big-images .line-scrollbar {
    width: 100%;
    height: 1px;
    background: #757382;
    margin-top: -4px;
}

{% endstyle %}

{% javascript %}

(function() {

  let selectors = {
        swiperBigimages: '.swiper-big-images',
    };
  
    let swiperBigimages = document.querySelector(selectors.swiperBigimages)

    window.addEventListener('load', function() {

        let swiper_images = new Swiper(swiperBigimages, {
            slidesPerView: "auto",
            spaceBetween: 30,
            freeMode: true,
            scrollbar: {
                el: ".slider-big-images .swiper-scrollbar",
                hide: false,
            },
        });

    })

  
})();
  

{% endjavascript %}

